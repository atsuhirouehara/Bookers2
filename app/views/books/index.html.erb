<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
  <%= render 'books/list', book: @book, user: @user %>
  </div>

<div class="col-md-8 offset-md-1">
<table class="table table-striped">
  <h1><strong>Books</strong></h1>
  <tr>
    <th>Imege</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
  
  <%= notice %>
  
  <% @books.each do |book| %>
   <tr>
     <td><span><%= link_to user_path(book.user) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: '100x100'%></span></td>
               <% end %>
     <td><span><%= link_to book.title, book_path(book.id) %></span></td>
     <td><span><%= book.body %></span></td>
   </tr>
  <% end %>
</table>
</div>

 </div>   
</div>