<div class="container px-5 px-sm-0">
 <div class="row">

  <div class="col-md-3">
   <%= render 'books/list', book: @book, user: @user %>
  </div>
  
<div class="col-md-8 offset-md-1">

<table class="table table-striped">
  <h1><strong>Book detail</strong></h1>
  <tr>
    <th>Image</th>
    <th>User</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
  
  <%= notice %>
   
   <tr>
     <td><span><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: '100x100' %><span></td>
     <td><span><%= link_to @user.name, user_path(@user.id) %></span></td>
     <td><span><%= link_to @book.title, book_path(@book.id) %></span></td>
     <td><span><%= @book.body %></span></td>
     <% if @user.id == current_user.id %>
     <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-secondary" %></td>
     <td><%= link_to "Destroy",(@book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ", class: "btn btn-secondary" %></td>
     <% end %>
   </tr>

</table>
  
 </div>
</div>
